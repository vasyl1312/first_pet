<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="../assets/calzone.png" />
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script>
      $(function () {
        $('#header').load('./headers/mainHeader.ejs')
        $('#productsDropdown').load('./headers/product.ejs')
        $('#authRoutes').load('./headers/authRoute.ejs')
        $('#loader').load('./headers/loader.ejs')
        $('#logo').load('./headers/logo.ejs')
        $('#homeRoute').load('./headers/homeRoute.ejs')
        $('#loginRoute').load('./headers/loginRoute.ejs')
        $('#hero').load('./headers/hero.ejs')
        $('#copyright').load('./headers/copyright.ejs')
        $('#scripts').load('./headers/scripts.ejs')
      })
    </script>
    <div id="header"></div>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <!--PreLoader-->
    <a id="loader"></a>
    <!--PreLoader Ends-->

    <!-- header -->
    <div class="top-header-area" id="sticker">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-sm-12 text-center">
            <div class="main-menu-wrap">
              <!-- logo -->
              <a id="logo"></a>
              <!-- logo -->

              <!-- menu start -->
              <nav class="main-menu">
                <ul>
                  <!-- <li class="current-list-item"> -->
                  <li id="homeRoute"></li>
                  <!-- </li> -->
                  <li id="productsDropdown"></li>
                  <% if (isAuth) {%>
                  <a id="authRoutes"></a>
                  <%} else {%>
                  <li id="loginRoute"></li>
                  <%}%>
                </ul>
              </nav>
              <div class="mobile-menu"></div>
              <!-- menu end -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end header -->

    <div class="hero-area hero-bg">
      <div class="container">
        <div class="row">
          <div class="col-md-7 text-center">
            <div class="hero-text">
              <div class="hero-text-tablecell">
                <h1 style="color: #ffffff">
                  <span class="orange-text">My </span>products
                  <i class="fa fa-check orange-text"> </i>
                </h1>
                <br />
                <h4 style="color: #413a3a">
                  On this page, you can see <b style="color: #001eff"> only your products </b> ,
                  update and delete them
                </h4>
              </div>
            </div>
          </div>
          <div class="col-md-5">
            <div class="single-product-img">
              <br />
              <br />
              <br />
              <br />
              <br />
              <img src="./assets/my_prod.png" alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="dark-banner">
      <!-- product section -->
      <div class="product-section mt-150 mb-150">
        <div class="container">
          <!-- alerts -->
          <%if (alert.type.length > 0) { %>
          <div class="container px-4 px-lg-5 my-5">
            <div class="alert alert-<%=alert.type %> alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <div class="text-center"><strong>Message:</strong> <%=alert.message %></div>
            </div>
          </div>
          <%}%>

          <div class="row">
            <%if (products.length > 0) { %> <% products.forEach((product)=> { %>
            <div class="col-lg-4 col-md-6 text-center">
              <div class="single-product-item">
                <div class="product-image">
                  <a href="/products/<%= product.id %>"
                    ><img src="<%= product.img %>" alt="" />
                    <i class="fa fa-check" style="color: #f28123"> Your product</i>
                  </a>
                </div>
                <h3 style="color: #fff"><b> <%= product.title %> </b></h3>
                <p class="product-price orange-text">
                  <br />
                  <span style="color: #001eff">Expected salary:</span> <%= product.price %>$
                </p>
                <br />
                <%if (isAuth) {%>
                <a class="cart-btn" href="/my_products/<%= product.id %>/edit?allow=true"
                  ><i class="fa fa-edit"> Edit</i></a
                >
                <%}%>
                <p>
                  <span style="color: #413a3a">
                    <br />
                    <%= product.date.toLocaleString()%></span
                  >
                </p>
                <!-- Copy -->
                <button
                  id="copy-btn"
                  class="btn btn-outline-dark mt-auto"
                  onclick="setClipboard('<%=base_url%>/products/<%= product.id %>')"
                >
                  Copy URL
                </button>

                <!-- share-buttons -->
                <div
                  class="social-icons"
                  onclick="setMedia('<%=base_url%>/products/<%= product.id %>')"
                >
                  <ul>
                    <li>
                      <a class="facebook" target="blank"><i class="fa fa-facebook"></i></a>
                    </li>
                    <li>
                      <a class="twitter" target="blank"><i class="fa fa-twitter"></i></a>
                    </li>
                    <li>
                      <a class="email" target="blank"><i class="fa fa-envelope"></i></a>
                    </li>
                    <li>
                      <a class="linkedin" target="blank"><i class="fa fa-linkedin"></i></a>
                    </li>
                    <li>
                      <a class="telegram" target="blank"><i class="fa fa-telegram"></i></a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <% }) %> <% } else {%>
            <div class="col-lg-8 offset-lg-2 text-center">
              <div class="section-title">
                <h3 style="color: #413a3a"><span class="orange-text">Opps</span>...</h3>
                <b style="color: #413a3a"> At this moment, there are not any posts </b>
              </div>
            </div>
            <%}%>
          </div>
        </div>
      </div>
    </section>
    <!-- end product section -->

    <!-- copyright -->
    <a id="copyright"></a>
    <!-- end copyright -->
    <a id="scripts"></a>
  </body>
</html>
