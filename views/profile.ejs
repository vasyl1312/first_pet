<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="../assets/calzone.png" />
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script>
      $(function () {
        $('#header').load('../headers/mainHeader.ejs')
        $('#productsDropdown').load('../headers/product.ejs')
        $('#authRoutes').load('../headers/authRoute.ejs')
        $('#loader').load('../headers/loader.ejs')
        $('#logo').load('../headers/logo.ejs')
        $('#homeRoute').load('../headers/homeRoute.ejs')
        $('#loginRoute').load('../headers/loginRoute.ejs')
        $('#hero').load('../headers/hero.ejs')
        $('#copyright').load('../headers/copyright.ejs')
        $('#scripts').load('../headers/scripts.ejs')
      })
    </script>
    <div id="header"></div>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <!--PreLoader-->
    <a id="loader"></a>
    <!--PreLoader Ends-->

    <!-- header -->
    <div class="top-header-area" id="sticker">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-sm-12 text-center">
            <div class="main-menu-wrap">
              <!-- logo -->
              <a id="logo"></a>
              <!-- logo -->

              <!-- menu start -->
              <nav class="main-menu">
                <ul>
                  <!-- <li class="current-list-item"> -->
                  <li id="homeRoute"></li>
                  <!-- </li> -->
                  <li id="productsDropdown"></li>
                  <% if (isAuth) {%>
                  <a id="authRoutes"></a>
                  <%} else {%>
                  <li id="loginRoute"></li>
                  <%}%>
                </ul>
              </nav>
              <div class="mobile-menu"></div>
              <!-- menu end -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end header -->

    <section class="dark-banner">
      <div class="container">
        <div class="row">
          <div class="col-md-7 text-center">
            <div class="section-title">
              <br />
              <br />
              <br />
              <br />
              <br />
              <h3><span class="orange-text">Profile</span> page</h3>

              <h4 style="color: #fff">
                <br />
                Here you can change avatar or nickname and delete your
                <b class="orange-text"> profile. </b>
              </h4>
            </div>
          </div>
          <div class="col-md-5">
            <div class="single-product-img">
              <img src="./assets/profile.png" alt="" />
            </div>
          </div>
        </div>
      </div>

      <!-- product section -->
      <div class="product-section mt-150 mb-150">
        <div class="container">
          <div class="row">
            <div class="single-product mt-150 mb-150">
              <div class="container">
                <div class="row">
                  <div class="col-md-5">
                    <div class="single-product-img">
                      <% if (user.avatarUrl) {%>
                      <img
                        class="avatar"
                        src="<%= user.avatarUrl %>"
                        alt="avatar-<%= user.name %>"
                      />
                      <%} else {%>
                      <img
                        class="avatar"
                        src="../images/emptyAvatar.png"
                        alt="avatar-<%= user.name %>"
                      />
                      <p>You have no avatar photo</p>
                      <%}%>
                    </div>
                  </div>
                  <div class="col-md-7">
                    <div class="single-product-content">
                      <form action="/profile" method="POST" enctype="multipart/form-data">
                        <p class="single-product-pricing">
                          <span>Your email: </span> <%= user.email %>
                        </p>

                        <span>Change your nickname: </span>
                        <p>
                          <input
                            class="validate"
                            type="text"
                            placeholder="Change your nickname"
                            name="name"
                            id="name"
                            minlength="3"
                            maxlength="20"
                            value="<%= user.name %>"
                            required
                          />
                        </p>

                        <br />
                        <div class="input-field">
                          <label for="avatar">
                            <h6>Change your avatar</h6>
                          </label>
                          <br />
                          <input type="file" name="avatar" />
                        </div>

                        <input type="hidden" name="img" value="<%= user.avatarUrl %>" />
                        <br />
                        <br />

                        <button type="submit" class="cart-btn">
                          <i class="fa fa-refresh"></i>
                          Update Profile Info
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- end product section -->

    <!-- copyright -->
    <a id="copyright"></a>
    <!-- end copyright -->
    <a id="scripts"></a>
  </body>
</html>
