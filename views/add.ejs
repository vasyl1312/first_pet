<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="../assets/calzone.png" />
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script>
      $(function () {
        $('#header').load('./headers/mainHeader.ejs')
        $('#productsDropdown').load('./headers/product.ejs')
        $('#authRoutes').load('./headers/authRoute.ejs')
        $('#loader').load('./headers/loader.ejs')
        $('#logo').load('./headers/logo.ejs')
        $('#homeRoute').load('./headers/homeRoute.ejs')
        $('#loginRoute').load('./headers/loginRoute.ejs')
        $('#hero').load('./headers/hero.ejs')
        $('#copyright').load('./headers/copyright.ejs')
        $('#scripts').load('./headers/scripts.ejs')
      })
    </script>
    <div id="header"></div>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
    <link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
  </head>
  <body>
    <!--PreLoader-->
    <a id="loader"></a>
    <!--PreLoader Ends-->

    <!-- header -->
    <div class="top-header-area" id="sticker">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-sm-12 text-center">
            <div class="main-menu-wrap">
              <!-- logo -->
              <a id="logo"></a>
              <!-- logo -->

              <!-- menu start -->
              <nav class="main-menu">
                <ul>
                  <!-- <li class="current-list-item"> -->
                  <li id="homeRoute"></li>
                  <!-- </li> -->
                  <li id="productsDropdown"></li>
                  <% if (isAuth) {%>
                  <a id="authRoutes"></a>
                  <%} else {%>
                  <li id="loginRoute"></li>
                  <%}%>
                </ul>
              </nav>
              <div class="mobile-menu"></div>
              <!-- menu end -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end header -->

    <!-- hero area -->
    <a id="hero"></a>
    <!-- end hero area -->

    <!--  form -->
    <div class="contact-from-section mt-150 mb-150">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 text-center">
            <div class="section-title">
              <h3>
                <span class="orange-text">Do you want to</span><b> add </b>
                <i class="fa fa-plus"></i> a new resume?
              </h3>
              <p>
                Here you can <b> add </b> the title, expected salary, technologies, photos, and
                description, where you can describe your experience, study steps, link to pet
                projects and social media, and other your wish(what you search for or who you
                are)...
              </p>
            </div>

            <%if (alert.type.length > 0) { %>
            <div class="container">
              <div class="alert alert-<%=alert.type %> alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <div class="text-center"><strong>Message:</strong> <%=alert.message %></div>
              </div>
            </div>
            <%}%>

            <div class="contact-form">
              <form action="/add" method="POST" enctype="multipart/form-data" id="submit">
                <p>
                  <input
                    class="validate"
                    type="text"
                    placeholder="Please enter your speciality"
                    name="title"
                    id="title"
                    maxlength="45"
                    required
                  />

                  <br />
                  <br />
                  <input
                    type="number"
                    placeholder="Enter expected salary in $ (value must be integer)"
                    id="price"
                    name="price"
                    min="0"
                    max="1000000"
                    required
                  />
                </p>

                <p>
                  <textarea
                    name="description"
                    id="description"
                    cols="30"
                    rows="10"
                    maxlength="2500"
                    minlength="50"
                    placeholder="Description"
                    required
                  ></textarea>
                </p>

                <label for="categories"><h6>Please select categories</h6> </label>
                <br />
                <select
                  data-placeholder="Start write..."
                  multiple
                  class="chosen-select"
                  id="categories"
                  name="categories"
                >
                  <option value=""></option>
                  <option>javascript</option>
                  <option>java</option>
                  <option>python</option>
                  <option>c_similar</option>
                  <option>frontend</option>
                  <option>backend</option>
                  <option>web_design</option>
                  <option>other</option>
                </select>

                <br />
                <br />

                <div class="input-field">
                  <label for="avatar">
                    <h6>Please select photo of product (jpg/png/jpeg)</h6>
                  </label>
                  <br />
                  <input type="file" name="avatar" />
                </div>
                <br /><br />
                <button type="submit" class="cart-btn">Add new <i class="fa fa-plus"></i></button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end contact form -->
    <!-- copyright -->
    <a id="copyright"></a>
    <!-- end copyright -->
    <a id="scripts"></a>
  </body>
</html>
