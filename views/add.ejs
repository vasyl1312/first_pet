<!DOCTYPE html>
<html lang="en">
  <head>
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script>
      $(function () {
        $('#header').load('../headers/header.ejs')
        $('#sourceCode').load('../headers/sourceCode.ejs')
        $('#headerDropList').load('../headers/headerDropList.ejs')
        $('#headerLink').load('../headers/headerLink.ejs')
      })
    </script>

    <link rel="icon" type="image/x-icon" href="./assets/calzone.png" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
    <link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />

    <div id="header"></div>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container px-4 px-lg-5">
        <div id="sourceCode"></div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
            <li class="dropdown-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <div id="headerDropList"></div>
            <% if (isAuth) {%>
            <div id="headerLink"></div>
          </ul>
          <%} else {%>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
            <li class="dropdown-item">
              <a class="nav-link" href="/login"
                ><img src="../../images/login.png" style="width: 50px; height: 50px"
              /></a>
            </li>
          </ul>
          <%}%>
        </div>
      </div>
    </nav>
  </head>

  <body>
    <!-- Header-->
    <header class="bg-dark py-3">
      <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
          <!-- alerts -->
          <h1 class="display-4 fw-bolder">Add new product</h1>
          <p class="lead fw-normal text-white-50 mb-0">
            On this page, you can add new product with image
          </p>
        </div>
      </div>
    </header>

    <%if (alert.type.length > 0) { %>
    <div class="container">
      <div class="alert alert-<%=alert.type %> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div class="text-center"><strong>Message:</strong> <%=alert.message %></div>
      </div>
    </div>
    <%}%>
    <!-- Section-->
    <section class="py-5">
      <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
          <form action="/add" method="POST" enctype="multipart/form-data">
            <div class="input-field">
              <label for="title">Please enter your speciality</label>
              <input id="title" name="title" type="text" class="validate" required />
              <span class="helper-text" data-error="Please enter your speciality"> </span>
            </div>

            <div class="input-field">
              <label for="price">Enter expected salary in $ (value must be integer)</label>
              <input type="number" id="price" name="price" min="0" max="1000000" />
              <span class="helper-text" data-error="Enter a valid salary in $"> </span>
            </div>

            <label for="description">Description</label>
            <textarea
              rows="9"
              class="form-control js-easymde"
              maxlength="2500"
              minlength="50"
              name="description"
              id="description"
              data-dl-input-translation="true"
              spellcheck="false"
              class="validate"
              required
            >
            </textarea>

            <br />

            <label for="categories">Please select technologies</label>
            <select
              data-placeholder="Start write..."
              multiple
              class="chosen-select"
              id="categories"
              name="categories"
              required
            >
              <option value=""></option>
              <option>javascript</option>
              <option>java</option>
              <option>python</option>
              <option>c_similar</option>
              <option>frontend</option>
              <option>backend</option>
              <option>web_design</option>
              <option>other</option>
            </select>
            <br /><br />

            <div class="input-field">
              <label for="avatar">Please select your photo (jpg/png/jpeg)</label>
              <input type="file" name="avatar" />
            </div>

            <button type="submit" class="btn btn-outline-dark mt-auto">Add</button>
          </form>
        </div>
      </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; My Website 2022</p>
      </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
